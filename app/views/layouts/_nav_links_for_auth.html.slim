- if user_signed_in?
  li.dropdown
    a.dropdown-toggle[data-toggle="dropdown" href="#"]
      | アカウント(
      = current_user.username
      | ) 
      span.caret
    ul.dropdown-menu
      li
        = link_to 'アカウント編集', edit_user_registration_path
