<tr>
  <td>
    <%= link_to user.email, user %>
  </td>
  <td>
    <%= form_with(model: user, local: true) do |f| %>
      <%= f.select :role, role_collections %>
      <%= f.submit 'ロール変更', class: 'button-xs' %>
    <% end %>
  </td>
  <td>
    <%= link_to("ユーザー削除", user_path(user), :data => { :confirm => "本当によろしいですか" }, :method => :delete, :class => 'button-xs') unless user == current_user %>
  </td>
</tr>
